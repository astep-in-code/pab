  <div class="body-background">
  <br>

  <h5 style="padding: 10px;"><strong>Mes Brassins</strong></h5>

  <% @brews.each do |br|  %>
  <div class="col-md-12 p-0">
    <section class="profil-panel profils-widget m-10">
    <div class="show-brew">
      <%= link_to brew_path(br) do %>
          <%= image_tag 'show_brew.png',
          width: '50', height: '50' %>
      <% end %>
    </div>
    <br>
    <div class="row no-gutters">
      <div class="col-6">
        <h2 class="beer_title"><%= br.beer.name %>
        </h2>
        <p><%#= br.status %>Fermentation primaire en cours</p>
      </div>
      <div class="col-6">
        <canvas id="myChart" width="100" height="100"></canvas>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-6">
         <table cellpadding="6" class="table-beers-shows">
          <thead>
            <tr>
              <th colspan="2"><strong>Densité : <span style="color: #FFC65A">1041</span></strong></th>
              <th><strong>Température : <span style="color: #FFC65A">22°C</span></strong></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% @start_date = br.beer.created_at %>
              <% @date_now = DateTime.now %>
              <% days_between = (@date_now - @start_date.to_date).to_i %>
              <%#= raise %>
              <td><strong>Volume : </strong><%= br.beer.volume %>L</td>
              <td><strong>Brassée le :</strong> <%= br.beer.created_at.strftime("%d-%m-%Y") %> <br>(il y a <%= days_between %> jour)</td>
              <td><strong>Suivant :</strong> Fermentation secondaire</td>
            </tr>
          </tbody>
        </table>
        <br>
      </div>
      <div class="col-md-6">
        <div class="white-panel pn">
          <div class="white-header">
            <h5>Avancement du Brassin</h5>
          </div>
          <p>Progression du Brassin</p>

          <script>
            var data = {
              labels: [
                "Yellow"
              ],
              datasets: [
                {
                  data: [40, 60],
                  backgroundColor: ["#FCB844", "#FFF"],
                  borderWidth: ['1px', '1px'],
                  borderColor: ["#FCB844", "#FCB844"]
                  }],
                };

            var myDoughnutChart = new Chart(document.getElementById('myChart'), {
              type: 'doughnut',
              data: data,
              options: {
                responsive: true,
                legend: {
                  display: false
                },
                cutoutPercentage: 75
              }
            });

            Chart.pluginService.register({
              beforeDraw: function(chart) {
                var width = chart.chart.width,
                    height = chart.chart.height,
                    ctx = chart.chart.ctx;

                ctx.restore();
                var fontSize = (height / 114).toFixed(2);
                ctx.font = fontSize + "em sans-serif";
                ctx.textBaseline = "middle";

                var text = "40%",
                    textX = Math.round((width - ctx.measureText(text).width) / 2),
                    textY = height / 2;

                ctx.fillText(text, textX, textY);
                ctx.save();
              }
            });
          </script>
          <br>
        </div>
      </div>
    </div>
    </section>
  </div>
  <!--/col-md-12 -->
  <% end %>


