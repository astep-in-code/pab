<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <div class="brew-form">
        <h1>Nouveau Brassin</h1>
        <div class="mt-3">
            <%= simple_form_for([@beer, @brew]) do |form| %>
                <% if @brew.errors.any? %>
                <div id="error_explanation">
                    <h2><%= pluralize(@brew.errors.count, "error") %> prohibited this brew from being saved:</h2>

                    <ul>
                    <% @brew.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                    </ul>
                </div>
                <% end %>

                <div>
                <%= form.submit 'Create', :class => 'btn btn-warning' %>
                <%= link_to 'Cancel', beer_path(@beer), class: 'btn btn-danger ml-2' %>
                </div>
            <% end %>
            <br>
        </div>
      </div>
    </div>
  </div>
</div>
