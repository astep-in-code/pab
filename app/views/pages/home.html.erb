<div class="card-category" style="background-image: url(https://res.cloudinary.com/dqyudfjjy/image/upload/v1581694263/Capture_d_e%CC%81cran_2020-02-14_a%CC%80_16.30.50_gudot9.png); border-radius: 0px;">
  <span style="color: black">Parcourir nos recettes</span>
</div>


<div class="container-beer" style="background-color: #fff">
  <ul class="list row">
    <% if params[:query].present?  %>
      <% @query = params[:query].capitalize  %>
      <% @beers = Beer.where("name ILIKE ?", "%#{@query}%")  %>
    <% else  %>
      <% @beers = Beer.all.order(:name)  %>
    <% end %>
    <% @beers.each do |beer| %>
    <li class="items col-6">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= beer.photo %>)">
          <%= link_to beer.name, beer_path(beer), style: 'color: #fff' %>
      </div>
    </li>
    <% end %>
  </ul>
<br>
<br>
</div>

